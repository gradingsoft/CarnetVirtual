<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Media Generala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/media_generalatextView"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Materia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media_generalatextView"
        android:layout_alignParentStart="true"
        android:id="@+id/materia_textView"
        android:textSize="18sp"
        android:layout_margin="5dp" />

    <TextView
        android:text="Teza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media_generalatextView"
        android:layout_alignParentEnd="true"
        android:id="@+id/teza_textView"
        android:textSize="18sp"
        android:layout_margin="5dp" />

    <TextView
        android:text="Nota1|Nota2|Nota3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/materia_textView"
        android:layout_alignParentStart="true"
        android:id="@+id/note_textView"
        android:textSize="18sp"
        android:layout_toStartOf="@+id/media_textView"
        android:layout_margin="5dp" />

    <TextView
        android:text="Medie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teza_textView"
        android:layout_alignParentEnd="true"
        android:id="@+id/media_textView"
        android:textSize="18sp"
        android:layout_margin="5dp" />
</RelativeLayout>