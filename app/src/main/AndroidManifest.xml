        <activity android:name="com.FragmentedPixel.DunceaOprea.carnetvirtual.Main" />
        <activity android:name="com.FragmentedPixel.DunceaOprea.carnetvirtual.FirstPage" />
        <activity android:name="com.FragmentedPixel.DunceaOprea.carnetvirtual.ChatActivity" />
